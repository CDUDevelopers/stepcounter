<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/daliyStepsTextbox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="stepInfo"
                    android:padding="5dp"
                    android:text="steps" />

                <TextView
                    android:id="@+id/daliyCaloriesTextbox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="calInfo"
                    android:padding="5dp"
                    android:text="calories" />

                <TextView
                    android:id="@+id/daliyDistanceTextbox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="distInfo"
                    android:padding="5dp"
                    android:text="distance" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Exercise"
                android:textAlignment="center"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/hikingTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="hiking"
                android:padding="20dp"
                android:text="Hiking" />

            <TextView
                android:id="@+id/runningTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="running"
                android:padding="20dp"
                android:text="Running" />

            <TextView
                android:id="@+id/walkingTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="walking"
                android:padding="20dp"
                android:text="walking" />

            <Button
                android:id="@+id/bluetoothButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bluetoothPage"
                android:text="Connect Bluetooth" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Profile"
                android:textAlignment="center"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/ageDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Age" />

            <TextView
                android:id="@+id/weightDisplay"
                android:layout_width="406dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Weight" />

            <TextView
                android:id="@+id/heightDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Height" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="edit"
                android:text="Edit" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>