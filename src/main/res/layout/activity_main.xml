<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="715dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="88dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/daliyStepsTextbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="steps" />

                <TextView
                    android:id="@+id/daliyCaloriesTextbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="calories" />

                <TextView
                    android:id="@+id/daliyDistanceTextbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="distance" />
            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Exercise"
            android:textAlignment="center"
            android:textSize="32dp" />

        <Button
            android:id="@+id/bluetoothButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="bluetoothPage"
            android:text="Bluetooth" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="edit"
            android:text="Edit" />

        <TextView
            android:id="@+id/hikingTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:onClick="hiking"
            android:text="Hiking" />

        <TextView
            android:id="@+id/walkingTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:onClick="walking"
            android:text="walking" />

        <TextView
            android:id="@+id/runningTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:onClick="running"
            android:text="Running" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textAlignment="center"
                android:textSize="32dp"
                android:text="Profile" />

            <TextView
                android:id="@+id/weightDisplay"
                android:layout_width="406dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="70dp"
                android:paddingBottom="20dp"
                android:text="Weight" />

            <TextView
                android:id="@+id/heightDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="140dp"
                android:paddingBottom="20dp"
                android:text="Height" />

            <TextView
                android:id="@+id/ageDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="200dp"
                android:paddingBottom="20dp"
                android:text="Age" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </RelativeLayout>
            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>