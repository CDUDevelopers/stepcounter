<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bluetoothScreen">

    <CheckBox
        android:id="@+id/enableBluetoothButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Enable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/enableBluetoothVisablilityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Visiable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bluetoothDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Bluetooth name"
        app:layout_constraintBottom_toBottomOf="@+id/enableBluetoothVisablilityButton"
        app:layout_constraintEnd_toStartOf="@+id/enableBluetoothVisablilityButton"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toEndOf="@+id/enableBluetoothButton"
        app:layout_constraintTop_toTopOf="@+id/enableBluetoothVisablilityButton" />

    <ImageView
        android:id="@+id/bluetoothSearchButton"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_action_search"
        app:layout_constraintEnd_toEndOf="@+id/bluetoothDeviceName"
        app:layout_constraintStart_toStartOf="@+id/bluetoothDeviceName"
        app:layout_constraintTop_toBottomOf="@+id/bluetoothDeviceName" />

    <ListView
        android:id="@+id/deviceList"
        android:layout_width="395dp"
        android:layout_height="633dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bluetoothSearchButton" />

</android.support.constraint.ConstraintLayout>